<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <div id="error_explanation">
         <% if @user.errors.any? %>
         <h3>1 error prohibited this obj from being saved:</h3>
           <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
           </ul>
         <% end %>
        </div>
        <%= form_with model: @user do |f| %>
         <div class="form-group">
           <label for="user_name">Nmae</label>
           <%= f.text_field:name, autofocus:true, id:"user_name" %>
         </div>
         <div class="form-group">
           <label for="user_image">Image</label>
           <%= f.file_field:profile_image,accept: "image/*" %>
         </div>
         <div class="form-group">
           <label for="user-introduction">Introduction</label>
           <%= f.text_area:introduction %>
         </div>
         <div class="form-group">
           <%= f.submit "User update", class: 'btn btn-secondary'%>
         </div>
        <% end %>
      </div>
    </div>
  </div>
</main>




